      </ImageView>
      <TextField fx:id="textField" layoutX="151.0" layoutY="305.0" onMouseClicked="#mouseClicked" prefHeight="42.0" prefWidth="307.0" styleClass="pass-and-text-fields" stylesheets="@style.css" />
