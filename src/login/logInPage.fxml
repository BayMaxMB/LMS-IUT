      <Label alignment="CENTER_RIGHT" layoutX="39.0" layoutY="362.0" prefHeight="33.0" prefWidth="102.0" styleClass="username-and-password" stylesheets="@style.css" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="151.0" layoutY="357.0" onMouseClicked="#mouseClicked" prefHeight="42.0" prefWidth="307.0" styleClass="pass-and-text-fields" stylesheets="@style.css" />
