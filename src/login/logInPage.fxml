            <ImageView fitHeight="25.0" fitWidth="28.0" layoutX="14.0" layoutY="9.0" opacity="0.75" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/128x128.png" />
               </image>
            </ImageView>
            <Button id="closeBtn" fx:id="closeBtn" layoutX="563.0" layoutY="8.0" mnemonicParsing="false" onMouseClicked="#closeButtonClickedHandler" prefHeight="25.0" prefWidth="25.0" text="X" />
