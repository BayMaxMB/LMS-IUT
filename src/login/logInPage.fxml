         </font>
      </Button>
      <ImageView fitHeight="128.0" fitWidth="234.0" layoutX="204.0" layoutY="460.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/open-book-icon-png.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
