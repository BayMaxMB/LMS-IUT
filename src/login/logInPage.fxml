<AnchorPane prefHeight="690.0" prefWidth="608.0" styleClass="main" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.Controller">
   <children>
      <Pane layoutY="-1.0" onMouseDragged="#dragWindow" onMousePressed="#mousePressedHandler" prefHeight="42.0" prefWidth="608.0" styleClass="top-panel" stylesheets="@style.css">
